{
  "compilerOptions": {
    "incremental": true,                   
    "target": "ESNext",                 
    "module": "UMD",            
    "allowJs": true,                       
    "checkJs": true,                       
    "strict": true,                       
    "noImplicitAny": false,                
    "strictNullChecks": true,             
    "strictFunctionTypes": true,          
    "strictBindCallApply": true,           
    "esModuleInterop": true,                 
    "skipLibCheck": true,                    
    "forceConsistentCasingInFileNames": true,
    "preserveSymlinks": true
  }
}
